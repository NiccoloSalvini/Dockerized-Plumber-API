FROM mdancho/h20-verse:3.30.0.1

# install the linux libraries needed for plumber 

RUN apt-get update && apt.get install -y \
  libssl-dev \
  libcurl4-gnutls-dev

## install r packs

RUN install2.r --error --deps TRUE \
  cranlogs \
  plumber
  
  
# copy evrything from the current directory into the container

## open port 8000 to traffic 

EXPOSE 8000

## When the container starts, start the main.R script 

ENTRYPOINT ["Rscript", "main.R"]


#### instructions ####

# 1. Create Image:
# 
# sudo docker build . -t mdancho/h2o-plumber
# 
# 2. Run Image Locally:
# 
# docker run --rm -p 8000:8000 mdancho/h2o-plumber
# 
# 
# 3. Test your API 
# 
# http://localhost:8000/scrape?npages=20